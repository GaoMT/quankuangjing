    //获取人员
    function LoadPerson()
    {

        $("#Person").combogrid({
            url: '../GrapSystem/LoadPerson',
            type: 'post',
            idField: 'EmpID',
            textField: 'EmpName',
            multiple: true,
            columns: [[
            { field: '', checkbox: true, title: '选择' },
