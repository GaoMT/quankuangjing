<Window x:Class="SHH.TF.UI.FormPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHH.TF.UI"
        mc:Ignorable="d"
        Title="FormPoint" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="设备特性"/>
        <ComboBox Grid.Column="1" SelectedIndex="0" x:Name="cbx_EquipID">
            <ComboBoxItem Content="未知"/>
            <ComboBoxItem Content="一氧化碳"/>
            <ComboBoxItem Content="风速"/>
            <ComboBoxItem Content="温度"/>
            <ComboBoxItem Content="瓦斯"/>
            <ComboBoxItem Content="风压"/>
            <ComboBoxItem Content="负压"/>
            <ComboBoxItem Content="水位"/>
            <ComboBoxItem Content="速度"/>
            <ComboBoxItem Content="煤位"/>
            <ComboBoxItem Content="流量"/>
            <ComboBoxItem Content="高低浓瓦斯"/>
            <ComboBoxItem Content="有功功率"/>
            <ComboBoxItem Content="无功功率"/>
            <ComboBoxItem Content="电流"/>
            <ComboBoxItem Content="功率因数"/>
            <ComboBoxItem Content="频率"/>
            <ComboBoxItem Content="电压"/>
            <ComboBoxItem Content="有功电量"/>
            <ComboBoxItem Content="无功电量"/>
            <ComboBoxItem Content="钩数"/>
            <ComboBoxItem Content="产量"/>
            <ComboBoxItem Content="开停"/>
            <ComboBoxItem Content="开关"/>
            <ComboBoxItem Content="煤仓空满"/>
            <ComboBoxItem Content="风门"/>
            <ComboBoxItem Content="风机"/>
            <ComboBoxItem Content="风筒"/>
            <ComboBoxItem Content="状态"/>
            <ComboBoxItem Content="刀闸"/>
            <ComboBoxItem Content="过卷"/>
            <ComboBoxItem Content="烟雾"/>
        </ComboBox>
        <TextBlock Text="名称" Grid.Row="1"/>
        <TextBox Grid.Column="2" Grid.Row="1" x:Name="tbx_Name" />
        <TextBlock Text="地点" Grid.Row="2"/>
        <TextBox Grid.Column="2" Grid.Row="2" x:Name="tbx_Place" />
        <TextBlock Text="ID" Grid.Row="3"/>
        <TextBox Grid.Column="2" Grid.Row="3" x:Name="tbx_Id" />
        <Button Grid.Row="4" Content="确定" Click="Button_Click"/>
    </Grid>
</Window>
