                        div.style.height = json[i].RateH + "px";
                        div.style.position = "absolute";
                        div.style.top = json[i].RateT + "px";
                        div.style.left = json[i].RateL + "px";
                      
                       
                        if (json[i].Tag.toString() == "3") {
                         
                            var con = document.createElement("span");
